{# empty Twig template #}
{% extends "ProjectBundle:Default:template.html.twig" %}

{% block content %}
<h3>Veuillez configurer les phases du projet ici ...</h3>
<hr/>
<form action="{{ path('editer_phase') }}" method="post">
{% for i in 1..etape_nbr %}

<span id="Project-phase">
<div style="background-color:rgb(200,200,200);padding: 20px; border-radius: 10px 10px 10px 10px;">
  <fieldset>
    
        <div class="col-lg-5">
            <label for="Npp"> Nom de la Phase</label>
            <input required="required" type="text" class="form-control" name="{{ i }}_Npp" id="Npp">
        </div>
        <div class="col-lg-6">
            <label for="descp">Description</label>
            <textarea required="required"  class="form-control" name="{{ i }}_descp" id="descp">
        
            </textarea>
        </div>
        <div class="col-lg-5">
            <label for="ddp">Date de debut</label>
            <input required="required" type="date" class="form-control" name="{{ i }}_ddp" id="ddp">
        </div>
        <div class="col-lg-6">
            <label for="dfp">Date de Fin</label>
            <input required="required" type="date" class="form-control" name="{{ i }}_dfp" id="dfp">
        </div>
        <div class="col-lg-11">
            <label for="coutp">Co√ªt</label>
            <input required="required" type="number" class="form-control" name="{{ i }}_coutp" id="coutp"> 
        </div>
        <div class="row">
            <div class="col-lg-3">
                <br>
                <label for="respp">Responsable</label>
                <input required="required" type="text" class="form-control" name="{{ i }}_respp" id="respp">
            </div>
            <div class=" col-lg-offset-1 col-lg-3">
                <br>
                <label for="emailp">Email:</label>
                <input required="required" type="email" class="form-control" name="{{ i }}_emailp" id="emailp">
            </div>
            <div class=" col-lg-offset-1 col-lg-3">
                <br>
                <label for="phonep">Telephone:</label>
                <input required="required" type="tel" class="form-control" name="{{ i }}_phonep" id="phonep">
            </div>
        </div>
  </fieldset><br/>
    <legend>
        <p>
            <a href="#" id="interv" class="btn btn-info " style="border-radius: 25px 25px 25px 25px;"><span class="glyphicon-plus"></span>
            Ajouter un Intervenant</a>
        </p>
    </legend>
    <div  style="background-color: #C5C5C5; padding: 20px; border-radius: 10px 10px 10px 10px;">
    <div id="intervenant" class="row">
        <div class="col-lg-3">
            <br>
            <label for="resp">Nom </label>
            <input  type="text" class="form-control"  name="{{ i }}_inter_nom[]" id="resp">
        </div>
        <div class=" col-lg-offset-1 col-lg-3">
            <br>
            <label for="email">Email:</label>
            <input  type="email" class="form-control" name="{{ i }}_inter_email[]" id="email">
        </div>
        <div class=" col-lg-offset-1 col-lg-3">
            <br>
            <label for="phone">Telephone:</label>
            <input  type="tel" class="form-control" name="{{ i }}_inter_phone[]" id="phone">
        </div>
    </div>
    <div class="row" id="new-inter">
        <div class="col-lg-3">
            <br>
            <label for="resp">Nom </label>
            <input  type="text" class="form-control" name="{{ i }}_inter_nom[]" id="resp">
        </div>
        <div class=" col-lg-offset-1 col-lg-3">
            <br>
            <label for="email">Email:</label>
            <input  type="email" class="form-control" name="{{ i }}_inter_email[]" id="email">
        </div>
        <div class=" col-lg-offset-1 col-lg-3">
            <br>
            <label for="phone">Telephone:</label>
            <input  type="tel" class="form-control" name="{{ i }}_inter_phone[]" id="phone">
        </div>
        </div>
    </div>
        <input type="submit" class="btn btn-info glyphicon-save col-lg-offset-5" value="Enregistrer">
                  
</div>
<input type="hidden" value="{{ projet }}" name="projet" />
</span> 
{% endfor %}
</form>
{% endblock %}