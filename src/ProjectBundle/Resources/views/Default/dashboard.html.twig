{# empty Twig template #}
{% extends "ProjectBundle:Default:template.html.twig" %}

{% block content %}
    <h1>Mon Compte</h1><h3>Mes Prjets</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">Projets En cour</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Intitule</th>
                        <th>Datedebut</th>
                        <th>Datefin</th>
                        <th>Close</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for projet in projet_open %}
                    <tr>
                        <td>{{ projet.titre }}</td>
                        <td>{{ projet.intitule }}</td>
                        <td>{% if projet.dateDebut %}{{ projet.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if projet.dateFin %}{{ projet.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if projet.close %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('projet_show', { 'id': projet.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('projet_edit', { 'id': projet.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">Projets terminer</div>
            <table class="table">
                
            </table>
        </div>
    </div>
</div>
{% endblock %}